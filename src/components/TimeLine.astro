    <div class="flex flex-wrap gap-4">
      <label
        class="flex items-center gap-2 text-body cursor-pointer select-none"
      >
        <input
          type="checkbox"
          name="filter"
          value="work"
          checked
          class="rounded border-default text-brand focus:ring-brand"
        />
        Experiencia Laboral
      </label>
      <label
        class="flex items-center gap-2 text-body cursor-pointer select-none"
      >
        <input
          type="checkbox"
          name="filter"
          value="certificate"
          checked
          class="rounded border-default text-brand focus:ring-brand"
        />
        Certificados
      </label>
      <label
        class="flex items-center gap-2 text-body cursor-pointer select-none"
      >
        <input
          type="checkbox"
          name="filter"
          value="education"
          checked
          class="rounded border-default text-brand focus:ring-brand"
        />
        Formación
      </label>
      <label
        class="flex items-center gap-2 text-body cursor-pointer select-none"
      >
        <input
          type="checkbox"
          name="filter"
          value="info_non_tech"
          class="rounded border-default text-brand focus:ring-brand"
        />
        Perfil No Técnico
      </label>
    </div>
  </nav>
  <ol class="relative border-s border-default">
    {
      ITEMS.map((item) => (
        <TimeLineItem
          {...item}
          style={item.category === "info_non_tech" ? "display: none" : ""}
