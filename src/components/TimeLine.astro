---
import PopUpCertificate from "./PopUpCertificate.astro";
import TimeLineItem from "./TimeLineItem.astro";
import Education from "../icons/Education.astro";
import Certificate from "../icons/Certificate.astro";
import Work from "../icons/Work.astro";

const ITEMS = [
  {
    date: "Septiembre 2023 - Marzo 2025",
    title: "FP Superior - Desarrollo de Aplicaciones Web",
    icon: Education,
    color: "bg-[#10B981]",
    category: "education",
  },
  {
    date: "Marzo, 2025",
    title: "Google: Inteligencia Artificial y productividad",
    subtitle: "Santander Open Academy",
    description:
      "Durante la obtención de este certificado, adquirí conocimientos fundamentales en el uso de herramientas de inteligencia artificial para mejorar la productividad personal y profesional.",
    icon: Certificate,
    color: "bg-[#06B6D4]",
    buttonText: "Mostrar certificado",
    category: "certificate",
    certificateImage: "assets/CertificateIA.PNG",
  },
  {
    date: "Marzo, 2025",
    title: "Python",
    subtitle: "Santander Open Academy",
    description:
      "Durante la obtención de este certificado, adquirí conocimientos fundamentales en el lenguaje de programación Python, incluyendo sintaxis básica, estructuras de datos...",
    icon: Certificate,
    color: "bg-[#06B6D4]",
    buttonText: "Mostrar certificado",
    category: "certificate",
    certificateImage: "assets/CertificatePython.PNG",
  },
  {
    date: "Marzo 2025",
    title: "Waimatech - Grupo Waima",
    description:
      "En el grupo Waima formo parte del equipo de desarrollo web como FullStack Developer, trabajando con diferentes tecnologías tanto para backend, frontend, bases de datos y Apis.",
    icon: Work,
    color: "bg-[#4F46E5]",
    buttonText: "Saber más",
    isCurrent: true,
    category: "work",
  },
  {
    date: "Noviembre, 2025",
    title: "API Owner",
    subtitle: "Fundación API Addicts",
    description:
      "Durante la obtención de este certificado, adquirí conocimientos fundamentales en el proceso de diseño, desarrollo y gestión de APIs, incluyendo mejores prácticas y estándares.",
    icon: Certificate,
    color: "bg-[#06B6D4]",
    buttonText: "Mostrar certificado",
    category: "certificate",
    certificateImage: null,
  },
  {
    date: "Noviembre, 2025",
    title: "API Ops",
    subtitle: "Fundación API Addicts",
    description:
      "Durante la obtención de este certificado, adquirí conocimientos fundamentales en la implementación, monitoreo y mantenimiento de APIs, asegurando su rendimiento, seguridad y escalabilidad.",
    icon: Certificate,
    color: "bg-[#06B6D4]",
    buttonText: "Mostrar certificado",
    category: "certificate",
    certificateImage: null,
  },
];
---

<section>
  <nav class="mb-6">
    <h2 class="text-lg font-semibold text-heading mb-3">Filtros línea de tiempo:</h2>
    <div class="flex flex-wrap gap-4">
      <label class="flex items-center gap-2 text-body cursor-pointer select-none">
        <input type="checkbox" name="filter" value="education" checked class="rounded border-default text-brand focus:ring-brand" />
        Educación
      </label>
      <label class="flex items-center gap-2 text-body cursor-pointer select-none">
        <input type="checkbox" name="filter" value="certificate" checked class="rounded border-default text-brand focus:ring-brand" />
        Certificados
      </label>
      <label class="flex items-center gap-2 text-body cursor-pointer select-none">
        <input type="checkbox" name="filter" value="work" checked class="rounded border-default text-brand focus:ring-brand" />
        Experiencia laboral
      </label>
    </div>
  </nav>
  <ol class="relative border-s border-default">
    {ITEMS.map((item) => <TimeLineItem {...item} />)}
  </ol>
</section>

<PopUpCertificate />
<script src="../scripts/ScriptTimeLine.ts"></script>